{
  "$schema": "https://deno.land/x/denon/schema.json",

  "allow": [
    "net",
    "env",
    "read",
    "write",
    "plugin",
    "run"
  ],
  "unstable": true,
  "lock": "local_lock.json",
  "tsconfig": "tsconfig.json",

  "scripts": {
    "start": {
      "cmd": "deno run ./src/app.ts",
      "desc": "Run the server in local mode",
      "env": {
        "ENV": "local",
        "NO_COLOR": "true"
      }
    },
    "test": {
      "cmd": "deno test",
      "env": {
        "ENV": "test"
      },
      "watch": false
    },
    "test-watch": {
      "cmd": "deno test",
      "env": {
        "ENV": "test"
      },
      "watch": true
    },
    "test-unit": {
      "cmd": "deno test tests/unit",
      "env": {
        "ENV": "test"
      }
    },
    "test-integration": {
      "cmd": "deno test tests/integration",
      "env": {
        "ENV": "test"
      },
      "watch": false
    },
    "prod": {
      "cmd": "deno run app.bundle.js",
      "desc": "Run the server in prod mode.",
      "env": {
        "ENV": "production",
        "NO_COLOR": "true"
      }
    },
    "check": {
      "cmd": "deno fmt --check --quiet",
      "lock": null,
      "tsconfig": null,
      "allow": []
    },
    "fmt": {
      "cmd": "deno fmt --quiet",
      "lock": null,
      "tsconfig": null,
      "allow": [],
      "watch": false
    },
    "lint": {
      "cmd": "deno lint --quiet",
      "lock": null,
      "tsconfig": null,
      "allow": [],
      "watch": false
    }
  },
  "logger": {
    "fullscreen": true,
    "quiet": false,
    "debug": true
  },
  "watcher": {
    "interval": 350,
    "exts": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "match": [
      "**/**"
    ],
    "skip": [
      "*/.git/*",
      "*/.idea/*",
      "*/.vscode/*",
      "*/.env/*"
    ],
    "legacy": false
  }
}
